<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.darksite.jazze.TousUtilisateursActivity">

    <include
        android:id="@+id/all_user_app_bar"
        layout="@layout/app_bar_layout" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listeUtilisateursRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_input_text_user"
        android:layout_marginTop="24dp"
        android:padding="10dp">

    </android.support.v7.widget.RecyclerView>

    <EditText
        android:id="@+id/search_input_text_user"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/all_user_app_bar"
        android:layout_toStartOf="@+id/btnSearchUser"
        android:background="@drawable/search_text_background"
        android:ems="10"
        android:hint="Rechercher des utilisateurs"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColorHint="@android:color/background_light" />

    <ImageButton
        android:id="@+id/btnSearchUser"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/all_user_app_bar"
        android:background="@drawable/search_text_background"
        app:srcCompat="@drawable/ic_recherche" />

</RelativeLayout>
