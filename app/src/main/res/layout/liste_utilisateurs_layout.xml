<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/listeUtilisateursImageProfil"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/userdefault"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/listeUtilisateursNom"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/nom_d_utilisateur"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/online_status"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/onlinebutton"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/listeUtilisateursStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status_d_utilisateur"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>